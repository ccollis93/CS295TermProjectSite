@model GameModel
@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>
<p>Test test test </p>

<div class="container">

    <h2>Username's Profile <!--Change this to a specific username later--></h2>
    <h3>UserID <!--Change this to a user ID later--></h3>


    <table border="1" style="border-collapse: collapse; width: 100%; height: 105px;">
        <thead>
            <tr style="height: 21px;">
                <th style="width: 10%; height: 21px;">Title</th>
                <th style="width: 10%; height: 21px;">Genre</th>
                <th style="width: 10%; height: 21px;">ESRB</th>         
                <th style="width: 10%; height: 21px;">Edit</th>
                <th style="width: 10%; height: 21px;">Remove</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in ViewBag.Games)
            {
            <tr style="height: 21px;">
                <td style="width: 10%; height: 21px;">@game.Title</td>
                <td style="width: 10%; height: 21px;">@game.Genre</td>
                <td style="width: 10%; height: 21px;">@game.EsrbRating</td>
                <td style="width: 10%; height: 21px;"><a asp-controller="Profile" asp-action="Edit" asp-route-id="@game.GameId">Edit</a></td>
                <td style="width: 10%; height: 21px;"><a asp-controller="Profile" asp-action="Remove" asp-route-id="@game.GameId">Remove</a></td>
            </tr>
            }
        </tbody>
    </table>
    <a class="nav-link" asp-area="" asp-controller="GameLibrary" asp-action="Edit" asp-route-id="0">Click here to add a game to your list</a>

</div>